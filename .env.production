# Production Environment Variables
# Copy this file to .env and update the values

# Domain Configuration
DOMAIN=your-domain.com

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_super_secure_root_password
MYSQL_DATABASE=kost_production
MYSQL_USER=kost_user
MYSQL_PASSWORD=your_secure_database_password

# Laravel Backend Environment Variables
APP_NAME="Potuna Kost"
APP_ENV=production
APP_KEY=base64:your_app_key_here
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=kost_production
DB_USERNAME=kost_user
DB_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=redis

# Mail Configuration (Update with your mail service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# MQTT Configuration
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=kost_backend

# WhatsApp & SMS Integration
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Payment Gateway (Midtrans)
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=true
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# File Upload Configuration
FILESYSTEM_DISK=public
MAX_UPLOAD_SIZE=10240

# Security
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# JWT Configuration (if using JWT)
JWT_SECRET=your_jwt_secret_key

# API Rate Limits
THROTTLE_API_RATE=60
THROTTLE_LOGIN_RATE=5

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=ap1

# Additional Laravel Configuration
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID
APP_TIMEZONE=Asia/Jakarta

# Company Information (for receipts)
APP_ADDRESS="Jalan M Khafi I, Gg. SD H. Simin No.91, RT.2/RW.4, Jagakarsa, Jakarta Selatan 12620"
APP_PHONE="+62 812-3456-7890"
APP_EMAIL="info@potunakos.com"

# Session Configuration
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com

# Additional Security
SECURE_COOKIES=true
FORCE_HTTPS=true
TRUSTED_PROXIES=*
BCRYPT_ROUNDS=12